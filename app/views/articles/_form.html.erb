    <%= f.label :phone, 'Phone*:' %><br>
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.label :email, 'Email:' %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :request, '* campos obligatorios' %><br>
  </p>
 
